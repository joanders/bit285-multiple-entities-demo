@model IndyBooks.ViewModels.BookViewModel

@{
    //TODO: Modify the AddBook View to use a new AddBookViewModel
    ViewBag.Title = "Lambda Expression Demo";
}
<h3>Bookstore Data Entry</h3>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Book.Title)
        @Html.EditorFor(m => m.Book.Title)
        @Html.ValidationMessageFor(m => m.Book.Title, "*")
    </div>
    <div class="form-group">
        <!-- TODO: Update the AddBook View to include a Dropdown List for Authors -->
            <!-- model.book.AuthorID-->
        @Html.LabelFor(m => m.Book.AuthorID)
        @Html.EditorFor(m => m.Book.AuthorID)
        @Html.ValidationMessageFor(m => m.Book.AuthorID, "*")
        @Html.DropDownListFor(model => model.Book.AuthorID, new SelectList(Model.Book.AuthorID))
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Book.Edition)
        @Html.EditorFor(m => m.Book.Edition)
        @Html.ValidationMessageFor(m => m.Book.Edition, "")
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Book.Publication)
        @Html.EditorFor(m => m.Book.Publication)
        @Html.ValidationMessageFor(m => m.Book.Publication, "")
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Book.Price)
        @Html.EditorFor(m => m.Book.Price)
        @Html.ValidationMessageFor(m => m.Book.Price, "*")
    </div>

    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
}

